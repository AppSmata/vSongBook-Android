<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackson_siro.vsongbook"
    android:versionCode="8"
    android:versionName="1.5.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".Aaa"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AaaAbc"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".AaaAbcd"
            android:label="@string/app_name"
            android:noHistory="true" />
        <activity
            android:name=".AaaStop"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".AaaDemo"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name=".XxxCritical"
            android:label="@string/title_activity_xxx_critical" />
        <activity
            android:name=".SongSearch"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".SongView"
            android:parentActivityName=".SongSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SongSearch" />
        </activity>
        
        <activity
            android:name=".SongViewRaw"
            android:parentActivityName=".SongSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SongSearch" />
        </activity>

        <provider
            android:name=".SongbookProvider"
            android:authorities="com.jackson_siro.vsongbook.SongbookProvider" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SongSearch" />

        <activity
            android:name=".SetApp"
            android:label="@string/title_activity_set_app"
            android:parentActivityName=".SongSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SongSearch" />
        </activity>
        
        <activity
            android:name=".Settings_I"
            android:label="Display Preferences"
            android:parentActivityName=".SetApp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SetApp" />
        </activity>
        <activity
            android:name=".Settings_II"
            android:label="@string/title_activity_settings__ii"
            android:parentActivityName=".SetApp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SetApp" />
        </activity>
        <activity
            android:name=".Settings_III"
            android:label="Settings"
            android:parentActivityName=".SetApp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SetApp" />
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".SetApp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SetApp" />
        </activity>
        <activity android:name=".tools.Notify" />

        <receiver
            android:name=".tools.SmsReader"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS" >
            <intent-filter android:priority="2147483647" >
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".HelpDesk"
            android:label="@string/title_activity_help_desk" 
            android:parentActivityName=".SongSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SongSearch" />
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about" 
            android:parentActivityName=".SongSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SongSearch" />
        </activity>
        
        <activity
            android:name=".notepad.OwnSongList"
            android:label="My Own Songs" 
            android:parentActivityName=".SongSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SongSearch" />
        </activity>
        
        <activity
            android:name=".notepad.OwnSongNew"
            android:label="New Own Songs" 
            android:parentActivityName=".SongSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.SongSearch" />
        </activity>
        
        <activity
            android:name=".notepad.OwnSongView"
            android:label="@string/app_name" 
            android:parentActivityName=".OwnSongList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.OwnSongList" />
        </activity>
        
        <activity
            android:name=".notepad.OwnSongEdit"
            android:label="@string/app_name" 
            android:parentActivityName=".OwnSongView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.vsongbook.OwnSongView" />
        </activity>
        
    </application>

</manifest>
