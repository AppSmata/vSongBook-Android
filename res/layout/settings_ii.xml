<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView1"
    android:background="#eee"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >
    
    <LinearLayout 
        android:orientation="vertical"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp">
                        
        <LinearLayout 
            android:orientation="vertical"
			android:background="@drawable/border"
			android:padding="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp">
            
            <TextView 
                android:textSize="18sp"
				android:textColor="#000"
				android:id="@+id/installed_on"
				android:padding="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Installed on" />
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="vertical"
			android:background="@drawable/border"
			android:padding="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="7dp">
            
            <TextView 
                android:textSize="18sp"
		        android:textColor="#000"
		        android:id="@+id/installed_desc"
		        android:padding="5dp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="Expires On" />
        </LinearLayout>
        
         
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
		    android:id="@+id/vsb_activate"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp" >
          	            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/activation_hint"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/activation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/activation_btn"
                android:onClick="ActivateApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activation_btn" />

        </LinearLayout>
        
        <LinearLayout 
            android:orientation="vertical"
		    android:id="@+id/vsb_instr"
			android:background="@drawable/border"
			android:padding="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="7dp">
            
            <TextView 
                android:textSize="18sp"
		        android:textColor="#000"
		        android:id="@+id/vsb_instructions"
		        android:padding="5dp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/payment_info" />
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="vertical"
		    android:id="@+id/vsb_note"
			android:background="@drawable/border"
			android:padding="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="7dp">
            
            <TextView 
                android:textSize="18sp"
		        android:textColor="#000"
		        android:id="@+id/vsb_payment"
		        android:padding="5dp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/payment_note" />
        </LinearLayout>
        
    </LinearLayout>
</ScrollView>
