<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackson_siro.visongbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.REVEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name=".ui.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity android:name=".ui.CcSongsLoad" />
        <activity
            android:name=".ui.CcBooksLoad"
            android:label="@string/title_activity_bb_books_load"
            android:theme="@style/MyMaterialTheme.NoActionBar" />

        <service android:name=".ui.notification.FcmMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".ui.notification.FcmInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.AppStart"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PostNow"
            android:label="@string/title_activity_basic"
            android:theme="@style/MyMaterialTheme.NoActionBar" />
        <activity
            android:name=".ui.BbUserSignin"
            android:label="@string/title_activity_signin"
            android:logo="@drawable/usericon"
            android:theme="@style/MyMaterialTheme.NoActionBar" />
        <activity
            android:name=".ui.BbUserSignup"
            android:label="@string/title_activity_signup"
            android:logo="@drawable/usericon"
            android:noHistory="true"
            android:theme="@style/MyMaterialTheme.NoActionBar" />
        <activity
            android:name=".ui.DdHomeView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.DdMainView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.EePostView"
            android:label="@string/post_view"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity android:name=".ui.GgAboutapp"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity android:name=".ui.GgHelpdesk"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity android:name=".ui.FfSettings"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.FfDonate"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.FfUpdates"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity android:name=".ui.Favorited" />
        <activity android:name=".ui.Feedback" />
    </application>

</manifest>